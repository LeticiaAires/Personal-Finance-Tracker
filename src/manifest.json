{
  "manifest_version": 2,
  "name": "Finance Visualizer",
  "version": "1.0",
  "description": "Visualize and manage your finances in Google Sheets.",
  "permissions": [
    "identity",
    "https://www.googleapis.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "oauth2": {
    "client_id": "395396622490-gjutakba22skjikcpel1nstaj5vesk02.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
